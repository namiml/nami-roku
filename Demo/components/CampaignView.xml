<?xml version="1.0" encoding="utf-8" ?>
<component name="CampaignView" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/CampaignView.brs" />

    <interface>
        <field id="namiDataSourceNode" type="node" alwaysNotify="true" onChange="OnDataSourceReceived"/>
        <field id="campaignList" type="roArray" onChange="OnCampaignListReceived"/>

        <function name="campaignLaunchHandler" />
    </interface>

    <children>
        <Label id="lTitle" text="Campaigns" horizAlign="center" vertAlign="center" width="1920" height="100" />
        <Labellist id="llCampaign" visible="false" translation="[710, 150]" itemSize="[500, 48]" />
        <Label id="lNoItems" text="There are no campaigns available." visible="false" horizAlign="center" vertAlign="center" width="1920" height="1080" />
    </children>
</component>
